<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Switch">
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:trackTint">@color/blue_light</item>
    </style>

    <style name="SearchWrapper">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginHorizontal">@dimen/indent_m</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/indent_s</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="SearchInput">
        <item name="android:background">@color/white</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/icon_indent</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:lineHeight">@dimen/line_height_m</item>
        <item name="android:lines">1</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textCursorDrawable">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="SearchBtnClean">
        <item name="android:tint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>