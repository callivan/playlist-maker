<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BtnMainOption">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/indent_m</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:lineHeight">@dimen/line_height_l</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_indent</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:lineHeight">@dimen/line_height_l</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BtnSettingsOption">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:lineHeight">@dimen/line_height_m</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:paddingVertical">@dimen/indent_l</item>
        <item name="android:paddingStart">@dimen/indent_m</item>
        <item name="android:paddingEnd">@dimen/indent_s</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/icon_indent</item>
        <item name="iconTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="Switch">
        <item name="android:thumbTint">@color/gray</item>
        <item name="android:trackTint">@color/gray_light</item>
    </style>

    <style name="SearchWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginHorizontal">@dimen/indent_m</item>
        <item name="android:background">@color/gray_light</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/indent_s</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="SearchInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/icon_indent</item>
        <item name="android:background">@color/gray_light</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:lineHeight">@dimen/line_height_m</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textCursorDrawable">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="SearchBtnClean">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:tint">@color/gray</item>
        <item name="android:backgroundTint">@color/gray_light</item>
    </style>
</resources>