<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BtnMainOption" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:lineHeight">@dimen/line_height_l</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_indent</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:lineHeight">@dimen/line_height_l</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BtnSettingsOption">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:lineHeight">@dimen/line_height_m</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:paddingVertical">@dimen/indent_l</item>
        <item name="android:paddingStart">@dimen/indent_m</item>
        <item name="android:paddingEnd">@dimen/indent_s</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/icon_indent</item>
        <item name="iconTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="Switch">
        <item name="android:thumbTint">@color/gray</item>
        <item name="android:trackTint">@color/gray_light</item>
    </style>

    <style name="SearchWrapper">
        <item name="android:background">@color/gray_light</item>
        <item name="android:backgroundTint">@color/gray_light</item>
        <item name="android:paddingStart">@dimen/indent_s</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="SearchIcon">
        <item name="tint">@color/gray</item>
    </style>

    <style name="SearchInput">
        <item name="android:background">@color/gray_light</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:lineHeight">@dimen/line_height_m</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textCursorDrawable">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="SearchBtnClean">
        <item name="android:tint">@color/gray</item>
        <item name="android:backgroundTint">@color/gray_light</item>
    </style>

    <style name="Track">
        <item name="android:paddingHorizontal">@dimen/indent_s</item>
        <item name="android:paddingVertical">@dimen/icon_indent</item>
    </style>

    <style name="TrackName">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:lineHeight">@dimen/line_height_m</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="TrackSmallText">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:lineHeight">@dimen/line_height_s</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TextError">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_b</item>
        <item name="android:lineHeight">@dimen/line_height_b</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="BtnUpdate">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_xm</item>
        <item name="android:lineHeight">@dimen/line_height_xm</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="SearchTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_b</item>
        <item name="android:lineHeight">@dimen/line_height_b</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TrackNameDetail">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:lineHeight">@dimen/line_height_l</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackAuthorDetail">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_xm</item>
        <item name="android:lineHeight">@dimen/line_height_xm</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackDetail">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_xm</item>
        <item name="android:lineHeight">@dimen/line_height_xm</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Theme.PlaylistMaker.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="TabText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_xm</item>
        <item name="android:lineHeight">@dimen/line_height_xm</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>
</resources>