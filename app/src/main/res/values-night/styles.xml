<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="switcher">
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:trackTint">@color/blue_light</item>
    </style>

    <style name="searchWrapper">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingStart">@dimen/indent_s</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="searchIcon">
        <item name="tint">@color/black</item>
    </style>

    <style name="searchInput">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:lineHeight">@dimen/line_height_m</item>
        <item name="android:lines">1</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textCursorDrawable">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="btnSearchClean">
        <item name="android:tint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>